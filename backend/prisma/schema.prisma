generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  first_name        String?
  last_name         String?
  email            String    @unique
  password_hash     String
  is_active         Boolean   @default(true)
  is_admin          Boolean   @default(false)
  last_login_at      DateTime?
  monitors         Monitor[]
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  @@map("users")
}

model Monitor {
  id            Int      @id @default(autoincrement())
  url           String
  interval      Int      @default(5) // minutes
  last_status    String?  // e.g., "200", "DOWN"
  last_checked_at DateTime?
  is_active      Boolean  @default(true)
  user          User     @relation(fields: [user_id], references: [id])
  user_id        Int
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
  
  // Alert settings
  alert_enabled  Boolean  @default(true)
  alert_email    String?  // Email to send alerts to (defaults to user email)
  alert_on_down  Boolean  @default(true) // Alert when monitor goes down
  alert_on_up    Boolean  @default(false) // Alert when monitor comes back up
  alert_on_slow  Boolean  @default(false) // Alert on slow response times
  slow_threshold Int?     // Response time threshold in ms for slow alerts
  
  // Relations
  checks        MonitorCheck[]
  incidents     Incident[]
  notifications Notification[]

  @@map("monitors")
}

model MonitorCheck {
  id            Int      @id @default(autoincrement())
  monitor_id     Int
  status        String   // "UP", "DOWN", "TIMEOUT", "ERROR"
  statusCode    Int?     // HTTP status code
  responseTime  Int?     // Response time in milliseconds
  errorMessage  String?  // Error message if check failed
  checked_at     DateTime @default(now())
  
  // Relations
  monitor       Monitor  @relation(fields: [monitor_id], references: [id], onDelete: Cascade)

  @@map("monitor_checks")
}

model Incident {
  id            Int      @id @default(autoincrement())
  monitor_id     Int
  status        String   // "DOWN", "UP" (when incident is resolved)
  started_at     DateTime @default(now())
  ended_at       DateTime?
  duration      Int?     // Duration in minutes
  description   String?  // Incident description
  
  // Relations
  monitor       Monitor  @relation(fields: [monitor_id], references: [id], onDelete: Cascade)

  @@map("incidents")
}

model Notification {
  id            Int      @id @default(autoincrement())
  monitor_id     Int
  type          String   // "DOWN", "UP", "SLOW", "RESOLVED"
  status        String   // "PENDING", "SENT", "FAILED"
  email         String   // Email address the notification was sent to
  subject       String   // Email subject
  message       String   // Email message content
  sent_at       DateTime?
  error_message String?  // Error message if sending failed
  created_at     DateTime @default(now())
  
  // Relations
  monitor       Monitor  @relation(fields: [monitor_id], references: [id], onDelete: Cascade)

  @@map("notifications")
}
